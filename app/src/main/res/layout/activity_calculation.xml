<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightWhite"
    tools:context=".Calculation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/white_rnd"
        android:layout_height="wrap_content"
        android:elevation="12dp"
        android:layout_margin="10dp"
        android:paddingTop="20dp">

        <ImageView
            android:id="@+id/ivback"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/img_4"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

    <TextView
        android:id="@+id/tv1"
        style="@style/Pricetitle"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:textColor="@color/blue"
        android:textStyle="bold"
        android:text="Calculate Your Zakat"/>



    <LinearLayout
        android:layout_below="@id/tv1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:elevation="8dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                android:paddingTop="25dp"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:paddingBottom="25dp"
                android:background="@drawable/outline_rnd_blue"
                android:orientation="vertical">

                <TextView
                    style="@style/Pricetitle"
                    android:text="Gold ( Tola )"/>
                 <LinearLayout
                    style="@style/etPriceLayout">

                    <EditText
                        android:id="@+id/etgold"
                        android:hint="How much gold you have"
                        style="@style/etPriceDetail"/>

                </LinearLayout>

                <TextView
                    style="@style/Pricetitle"
                    android:text="Silver ( Tola )"/>
                <LinearLayout
                    style="@style/etPriceLayout">

                    <EditText
                        android:id="@+id/etsilver"
                        android:hint="How much silver you have"
                        style="@style/etPriceDetail"/>

                </LinearLayout>
                <TextView
                    style="@style/Pricetitle"
                    android:text="Property ( Marla )"/>
                <LinearLayout
                    style="@style/etPriceLayout">

                    <EditText
                        android:id="@+id/etproperty"
                        android:hint="How many marlas you have"
                        style="@style/etPriceDetail"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv2"
                android:textColor="@color/blue"
                style="@style/Pricetitle"
                android:layout_marginStart="20dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:background="@color/white"
                android:text="What You Own"/>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnClear"
                android:background="@drawable/btn_bg"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="52dp"
                android:text="Clear"
                android:textAllCaps="true"
                android:textStyle="bold" />


            <View
                android:id="@+id/divider"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.001"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="?android:attr/listDivider" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnCalc"
                android:background="@drawable/btn_bg_clr"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="52dp"
                android:textColor="@color/white"
                android:text="Calculate"
                android:textStyle="bold"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/tvzkat"
            style="@style/Pricetitle"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:visibility="visible"
            android:layout_gravity="center_horizontal"
            android:text=""/>

    </LinearLayout>




</RelativeLayout>
</ScrollView>